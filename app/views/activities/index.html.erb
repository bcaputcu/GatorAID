<div class="page-header">
	<h1>All Activities</h1>
</div>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Activity ID</th>
			<th>Desc</th>
			<th>Country</th>
			<th>Type</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @activities.each do |activity| %>
		<tr>
			<td><%= activity.identifier %></td>
			<td><%= activity.description %></td>
			<td><%= activity.country %></td>
			<td><%= activity.precision %></td>
			<td><%= link_to "Details", activity_path(activity), class: "btn" %></td>
		</tr>
		<% end %>
	</tbody>
</table>